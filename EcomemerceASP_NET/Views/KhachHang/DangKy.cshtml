@model EcomemerceASP_NET.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng Ký Thành Viên</h1>
        <form asp-action="DangKy" asp-controller="KhachHang" enctype="multipart/form-data">

            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.MaKh" type="text" class="form-control">
                            <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MatKhau" type="text" class="form-control">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.HoTen"></label><sup>*</sup>
                        <input type="text" class="form-control" asp-for="@Model.HoTen">
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                    </div>
                    @*<div class="form-check my-3">
                        <input asp-for="@Model.GioiTinh" class="form-check-input" id="Account-1" name="Accounts" value="Accounts">
                        <label class="form-check-label" for="GioiTinh">Nam?</label>


                    </div>*@
                    <div style="display: flex">
                        <div class="form-check my-3">
                            <!-- Radio button cho Nam -->
                            <input type="radio" asp-for="GioiTinh" class="form-check-input" id="GioiTinh-Nam" value="true" />
                            <label class="form-check-label" for="GioiTinh-Nam">Nam</label>
                        </div>
                        <div class="form-check my-3" style="margin-left: 10px">
                            <!-- Radio button cho Nữ -->
                            <input type="radio" asp-for="GioiTinh" class="form-check-input" id="GioiTinh-Nu" value="false" />
                            <label class="form-check-label" for="GioiTinh-Nu">Nữ</label>
                        </div>
                    </div>
                   


                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.NgaySinh"></label>
                        <input  class="form-control" asp-for="@Model.NgaySinh">
                        <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.DiaChi"></label><sup>*</sup>
                        <input type="text" class="form-control" asp-for="@Model.DiaChi">
                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.DienThoai"></label><sup>*</sup>
                        <input type="text" class="form-control" asp-for="@Model.DienThoai">
                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
                        <input type="text" class="form-control" asp-for="@Model.Email">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" for="Hinh" asp-for="@Model.Hinh">Hình</label><sup>*</sup>
                        <input type="file" name="Hinh" class="form-control" asp-for="@Model.Hinh">
                    </div>

                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Kí</button>
                </div>
            </div>
        </form>
    </div>
</div>