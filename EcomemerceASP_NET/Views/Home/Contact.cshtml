@model EcomemerceASP_NET.ViewModels.ContactVM
@{
    ViewData["Title"] = "Contact";
}

<!-- Contact Start -->
<div class="container-fluid contact py-5 hero-header">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Get in touch</h1>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100"
                                style="height: 400px;"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.6206033242276!2d105.8411711!3d21.028511!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135abbf7b882f9b%3A0xb1f00a1f69a68fb9!2zSMOgIE7hurVuZywgVMOibiBDaOG7pywgSG_DoG4gTm9pLCBWaWV0IE5hbQ!5e0!3m2!1sen!2sbd!4v1694259649153!5m2!1sen!2sbd"
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
                <div class="col-lg-7">
                    <!-- Contact Form -->
                    <form method="post" asp-action="Contact" class="">
                        <input type="text" asp-for="HoTen" class="w-100 form-control border-0 py-3 mb-4" placeholder="Your Name" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>

                        <input type="email" asp-for="Email" class="w-100 form-control border-0 py-3 mb-4" placeholder="Enter Your Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <textarea asp-for="NoiDung" class="w-100 form-control border-0 mb-4" rows="5" cols="10" placeholder="Your Message"></textarea>
                        <span asp-validation-for="NoiDung" class="text-danger"></span>

                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary " type="submit">Submit</button>
                    </form>
                </div>
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Địa chỉ</h4>
                            <p class="mb-2">123 Nguyễn Chí Thanh, Ba Đình, Hà Nội</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Email</h4>
                            <p class="mb-2">hoangnamshop@gmail.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Điện Thoại</h4>
                            <p class="mb-2">(+84) 0858 200 725</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->